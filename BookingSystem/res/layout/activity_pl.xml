<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/pl_type"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_boy"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:gravity="center"
            android:text="找帅哥"
            android:textColor="@color/color_btm_navi_txt"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/radio_girl"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:gravity="center"
            android:text="找美女"
            android:textColor="@color/color_btm_navi_txt"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/radio_teacher"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:gravity="center"
            android:text="找教练"
            android:textColor="@color/color_btm_navi_txt"
            android:textSize="15sp" />

        <!-- 
        <RadioButton
            android:id="@+id/radio_master"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:gravity="center"
            android:text="找高手"
            android:textColor="@color/black"
            android:textSize="15sp" />
         -->
    </RadioGroup>

    <com.ab.view.pullview.AbPullListView
        android:id="@+id/pl_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

</LinearLayout>