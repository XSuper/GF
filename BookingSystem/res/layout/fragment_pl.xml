<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/pl_type"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <RadioButton
            android:gravity="center"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/radio_boy"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="找帅哥"
            android:textColor="@color/color_btm_navi_txt"
            android:textSize="15sp" />

        <RadioButton
            android:gravity="center"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/radio_girl"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="找美女"
            android:textColor="@color/color_btm_navi_txt"
            android:textSize="15sp" />

        <RadioButton
            android:gravity="center"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/radio_teacher"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="找教练"
            android:textColor="@color/color_btm_navi_txt"
            android:textSize="15sp" />

        <RadioButton
            android:gravity="center"
            android:background="@drawable/top_radio"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/radio_master"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="找高手"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/layout_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <android.support.v4.view.ViewPager
                android:id="@+id/layout_imagespager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/last"
                android:layout_width="25dip"
                android:layout_height="58dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/left_icon"
                android:visibility="invisible" />

            <Button
                android:id="@+id/next"
                android:layout_width="25dip"
                android:layout_height="58dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_icon" />
        </RelativeLayout>

        <com.ab.view.pullview.AbPullListView
            android:id="@+id/pl_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>