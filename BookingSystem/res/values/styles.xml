<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
      <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right</item>
    </style>
    
    <style name="radio_btn_style">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:gravity">center</item>
		<item name="android:layout_weight">1</item>
	    <item name="android:paddingTop">12dip</item>
	    <item name="android:paddingBottom">12dip</item>
		<item name="android:button">@null</item>
	    <item name="android:background">@drawable/bottom_radio</item>
	    <item name="android:textColor">@color/color_btm_navi_txt</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:duplicateParentState">true</item>
	</style>

    <style name="groundDetail_info">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:minHeight">40dip</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:paddingLeft">20dip</item>
	    <item name="android:paddingRight">20dip</item>
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:layout_marginLeft">20sp</item>
	    <item name="android:layout_marginRight">20sp</item>
	    <item name="android:drawableRight">@drawable/arrow_right</item>
    </style>
    <style name="register_text">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">50dip</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:paddingLeft">20dip</item>
	    <item name="android:paddingRight">20dip</item>
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:layout_marginLeft">20sp</item>
	    <item name="android:layout_marginRight">20sp</item>
	    <item name="android:background">@drawable/input_bg</item>
	    <item name="android:paddingLeft">10dip</item>
	    <item name="android:singleLine">true</item>
    </style>
    
    <style name="home_btn_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <style name="ground_search_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:layout_marginLeft">20sp</item>
	    <item name="android:layout_marginRight">20sp</item>
	    <item name="android:orientation">horizontal</item>
    </style>
    <style name="ground_search_prompt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Prompt_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">10dip</item>
    </style>
    
    
    <style name="ground_search_content">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">25dip</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
